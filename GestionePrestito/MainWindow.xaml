<Window x:Class="GestionePrestito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionePrestito"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="891">
    <Grid>
        <Label Content="Cognome" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="20,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Sesso" HorizontalAlignment="Left" Margin="20,184,0,0" VerticalAlignment="Top"/>
        <Label Content="Data di nascita" HorizontalAlignment="Left" Margin="20,239,0,0" VerticalAlignment="Top"/>
        <Label Content="Città di residenza" HorizontalAlignment="Left" Margin="20,300,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Height="0" Margin="-105,25,0,0" VerticalAlignment="Top" Width="0"/>
        <TextBox Name="txtCognome" HorizontalAlignment="Left" Margin="168,68,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtNome" HorizontalAlignment="Left" Margin="168,127,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <RadioButton  Name="rbfemmina" Content="F" HorizontalAlignment="Left" Margin="168,190,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbmaschio" Content="M" HorizontalAlignment="Left" Margin="228,190,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="dataPicker" HorizontalAlignment="Left" Margin="156,241,0,0" VerticalAlignment="Top"/>
